cmake_minimum_required(VERSION 3.10)
project(FleetManagement)

set(CMAKE_CXX_STANDARD 11)

include_directories(${CMAKE_SOURCE_DIR}/src)

enable_testing()

add_subdirectory(src/tests)

add_executable(FleetManager main.cpp)
target_link_libraries(FleetManager PRIVATE Catch2::Catch2)

add_test(NAME FleetManagerTests COMMAND FleetManager)

add_executable(VehicleTests src/tests/VehicleTests.cpp)
target_link_libraries(VehicleTests PRIVATE Catch2::Catch2)

add_test(NAME VehicleTests COMMAND VehicleTests)